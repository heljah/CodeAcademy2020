@{
    ViewData["Title"] = "Game House";
}
@section scripts {
    <script src="~/js/sovellus.js"></script>
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-sm-4">
        <button type="button" class="btn btn-info">Mitä</button>
    </div>
    <div class="col-sm-4">mulle</div>
    <div class="col-sm-4">
        <button type="button" class="btn btn-link">kuuluu?</button>
    </div>
</div>
<br>
<div class="flex-column">
    <button class="btn btn-primary" type="button" data-toggle="collapse" data-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample">
        Liikaa tyhjiä buttoneita eikä yhtään vastausta?
    </button>
    <br><br><br>
    <div class="collapse" id="collapseExample">
        <div class="row">
            <div class="col-sm-4">Kiitos,</div>
            <div class="col-sm-1">eipä</div>
            <div class="col-sm-4">tässä.</div>  
        </div>
    </div>
</div>
<br>
<span>Laskin</span>
<form class="w-25" action="/Home/GameHouse" method="post">
    <div class="form-group">
        <label for="luku1">Luku 1</label>
        <input type="text" class="form-control" name="luku1">
    </div>
    <div class="form-group">
        <label for="luku2">Luku 2</label>
        <input type="text" class="form-control" name="luku2">
    </div>
    <button type="submit" class="btn btn-primary">Laske</button>
</form>

@if(ViewBag.tulos != null){
    <div class="alert alert-primary w-25" role="alert">
        Summa on: @ViewBag.tulos
    </div>
}

<br>
<div class="container">
    <a asp-area="" asp-controller="Home" asp-action="myProfile">Tästä mun profiiliin!</a>
</div>
